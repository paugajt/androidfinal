<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:textDirection="anyRtl"
    android:background="@drawable/charinfo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="75dp">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
        android:id="@+id/view_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:textColor="@color/white"
        android:layout_marginTop="8dp"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

            <TextView
                android:id="@+id/view_name"
                android:layout_width="223dp"
                android:layout_height="33dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/white"
                android:ems="10"
                android:textStyle="bold"
                android:inputType="text"
                android:layout_marginTop="8dp"
                android:textSize="20dp"
                android:textAlignment="center" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/view_isa_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:text="Is a"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/view_descriptor"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginStart="10dp"
                android:ems="7"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:inputType="text" />

            <TextView
                android:id="@+id/view_type"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textAlignment="center"
                android:ems="7"
                android:textStyle="bold"
                android:inputType="text" />
        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/view_who_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:text="Who"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/view_focus"
                    android:layout_width="250dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="8dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:ems="15"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:inputType="text" />

            </LinearLayout>
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
        android:id="@+id/view_tier_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
            android:textColor="@color/white"
        android:text="Tier"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

        <TextView
        android:id="@+id/view_effort_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="8dp"
            android:textColor="@color/white"
        android:text="Effort"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

        <TextView
        android:id="@+id/view_xp_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="8dp"
            android:textColor="@color/white"
        android:text="XP"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
        android:id="@+id/view_tier"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_border"
        android:text="0"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

        <TextView
        android:id="@+id/view_effort"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_border"
        android:text="0"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

        <TextView
        android:id="@+id/view_xp"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_border"
        android:text="0"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
        android:id="@+id/view_might_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
            android:textColor="@color/white"
        android:text="Might"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

        <TextView
        android:id="@+id/view_speed_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
            android:textColor="@color/white"
        android:text="Speed"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

        <TextView
        android:id="@+id/view_intellect_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="8dp"
            android:textColor="@color/white"
        android:text="Intellect"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
        android:id="@+id/view_might_remain"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_border"
        android:text="0"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

        <TextView
        android:id="@+id/view_speed_remain"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_border"
        android:text="0"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

        <TextView
        android:id="@+id/view_intellect_remain"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_border"
        android:text="0"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

        <TextView
        android:id="@+id/view_remain"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="Remain"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="normal"
        android:textSize="10dp"/>

        </LinearLayout>

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


            <TextView
                android:id="@+id/view_might_total"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/text_border"
                android:text="0"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/view_speed_total"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/text_border"
                android:text="0"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/view_intellect_total"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/text_border"
                android:text="0"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />
        <TextView
        android:id="@+id/view_total"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:text="Total"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="normal"
        android:textSize="10dp"/>
        </LinearLayout>


        <TextView
        android:id="@+id/view_abilities_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
            android:textColor="@color/white"
        android:text="Abilities"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

        <TextView
        android:id="@+id/view_abilities"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_border"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

        <TextView
        android:id="@+id/view_attacks_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
            android:textColor="@color/white"
        android:text="Attacks"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

        <TextView
        android:id="@+id/view_attacks"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_border"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

        <TextView
        android:id="@+id/view_cyphers_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
            android:textColor="@color/white"
        android:text="Cyphers"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

        <TextView
        android:id="@+id/view_cyphers"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_border"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

        <TextView
        android:id="@+id/view_equipment_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
            android:textColor="@color/white"
        android:text="Equipment"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

        <TextView
        android:id="@+id/view_equipment"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_border"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/view_notes_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:text="Notes:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/view_notes"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/text_border"
            android:inputType="textMultiLine"
            android:gravity="top|left"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/new_round_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/view_character_edit_button"
        android:layout_marginEnd="70dp"
        android:text="New Round"
        android:onClick="newRoundButtonIntent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <Button
        android:id="@+id/view_character_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="28dp"
        android:layout_marginStart="71dp"
        android:text="Edit"
        android:onClick="editCharacterInfo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/new_round_button"
        app:layout_constraintHorizontal_bias="0.349"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent" />




</RelativeLayout>

